<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drink_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_baseline_emoji_food_beverage_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drink_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250ml"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/lato_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/drink_image"
        app:layout_constraintTop_toTopOf="@+id/drink_image" />

    <TextView
        android:id="@+id/drink_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="at 09.27 A.M."
        android:fontFamily="@font/lato"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/drink_image"
        app:layout_constraintStart_toStartOf="@+id/drink_weight" />


</androidx.constraintlayout.widget.ConstraintLayout>